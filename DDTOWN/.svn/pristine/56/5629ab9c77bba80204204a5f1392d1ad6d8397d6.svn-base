/* Notice Page Styles */

/* Hero Section */
.notice-hero {
    background-color: var(--background-color-dark);
    color: var(--text-color-light);
    padding: var(--spacing-xl) 0;
    text-align: center;
    margin-top: 80px;
}

.notice-hero h2 {
    font-size: var(--font-size-xxlarge);
    margin-bottom: var(--spacing-md);
}

.notice-hero p {
    font-size: var(--font-size-large);
    color: var(--text-color-secondary);
}

/* Notice List Section */
.notice-list {
    padding: var(--spacing-xl) 0;
}

/* Search Form */
.notice-search {
    margin-bottom: var(--spacing-lg);
}

.notice-search form {
    display: flex;
    gap: var(--spacing-sm);
    max-width: 800px;
    margin: 0 auto;
}

.notice-search select {
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    background-color: var(--background-color);
    color: var(--text-color-primary);
}

.notice-search input[type="text"] {
    flex: 1;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    background-color: var(--background-color);
    color: var(--text-color-primary);
    min-width: 300px;
}

.notice-search input[type="text"]::placeholder {
    color: var(--text-color-secondary);
}

/* Notice Table */
.notice-table {
    margin-bottom: var(--spacing-lg);
}

.notice-table table {
    width: 100%;
    border-collapse: collapse;
    background-color: var(--background-color);
    box-shadow: var(--shadow-sm);
}

.notice-table th,
.notice-table td {
    padding: var(--spacing-md);
    text-align: center;
    border-bottom: 1px solid var(--border-color);
}

.notice-table th {
    background-color: var(--background-color-light);
    font-weight: var(--font-weight-medium);
    color: var(--text-color-primary);
}

.notice-table td {
    color: var(--text-color-secondary);
}

.notice-table td:nth-child(2) {
    text-align: left;
}

.notice-table td:nth-child(2) a {
    color: var(--text-color-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
}

.notice-table td:nth-child(2) a:hover {
    color: var(--primary-color);
}

/* Pagination */
.notice-pagination {
    display: flex;
    justify-content: center;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-xl);
}

.notice-pagination a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    color: var(--text-color-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
}

.notice-pagination a:hover {
    background-color: var(--background-color-light);
    color: var(--primary-color);
}

.notice-pagination a.active {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
    color: var(--text-color-light);
}

/* Notice Detail Page */
.notice-detail {
    padding: var(--spacing-xl) 0;
}

.notice-header {
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--border-color);
}

.notice-header h3 {
    font-size: var(--font-size-xlarge);
    color: var(--text-color-primary);
    margin-bottom: var(--spacing-md);
}

.notice-meta {
    display: flex;
    gap: var(--spacing-lg);
    color: var(--text-color-secondary);
    font-size: var(--font-size-small);
}

.notice-content {
    margin-bottom: var(--spacing-xl);
    line-height: 1.8;
    color: var(--text-color-primary);
}

.notice-content h4 {
    font-size: var(--font-size-large);
    color: var(--text-color-primary);
    margin: var(--spacing-lg) 0 var(--spacing-md);
}

.notice-content p {
    margin-bottom: var(--spacing-md);
}

.notice-content ul,
.notice-content ol {
    margin-bottom: var(--spacing-lg);
    padding-left: var(--spacing-lg);
}

.notice-content li {
    margin-bottom: var(--spacing-sm);
}

.notice-attachments {
    background-color: var(--background-color-light);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius-md);
    margin-bottom: var(--spacing-xl);
}

.notice-attachments h4 {
    font-size: var(--font-size-medium);
    color: var(--text-color-primary);
    margin-bottom: var(--spacing-md);
}

.notice-attachments ul {
    list-style: none;
    padding: 0;
}

.notice-attachments li {
    margin-bottom: var(--spacing-sm);
}

.attachment-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--text-color-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
}

.attachment-link:hover {
    color: var(--primary-color);
}

.attachment-link i {
    color: var(--primary-color);
}

.notice-actions {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-xl);
}

/* Responsive Styles */
@media (max-width: 768px) {
    .notice-search form {
        flex-direction: column;
    }

    .notice-table {
        overflow-x: auto;
    }

    .notice-table th,
    .notice-table td {
        padding: var(--spacing-sm);
        font-size: var(--font-size-small);
    }

    .notice-meta {
        flex-direction: column;
        gap: var(--spacing-sm);
    }

    .notice-header h3 {
        font-size: var(--font-size-large);
    }

    .notice-content h4 {
        font-size: var(--font-size-medium);
    }
} 